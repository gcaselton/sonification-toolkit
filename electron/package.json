{
  "name": "sonification-toolkit",
  "version": "0.1.0",
  "description": "Desktop app for the sonification of astronomical phenomena.",
  "homepage": "https://github.com/gcaselton/sonification-toolkit",
  "author": {
    "name": "George Caselton",
    "email": "george.caselton@newcastle.ac.uk"
  },
  "license": "ISC",
  "main": "main.cjs",
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder"
  },
  "dependencies": {
    "electron-squirrel-startup": "^1.0.1",
    "tree-kill": "^1.2.2",
    "wait-on": "^8.0.4"
  },
  "devDependencies": {
    "electron": "^37.3.1",
    "electron-builder": "^26.0.12"
  },
  "build": {
    "appId": "com.georgecaselton.sonification-toolkit",
    "productName": "Sonification Toolkit",
    "forceCodeSigning": false,
    "publish": null,
    "generateUpdatesFilesForAllChannels": false,
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.cjs",
      "preload.cjs",
      "splash.html",
      "build/**/*"
    ],
    "extraResources": [
      {
        "from": "resources/_internal",
        "to": "_internal"
      }
    ],
    "win": {
      "extraResources": [
        {
          "from": "resources/backend.exe",
          "to": "backend.exe"
        }
      ]
    },
    "mac": {
      "target": [
        {
          "target": "default",
          "arch": ["x64", "arm64"]
        }
      ],
      "extraResources": [
        {
          "from": "resources/backend",
          "to": "backend"
        }
      ]
    },
    "linux": {
      "extraResources": [
        {
          "from": "resources/backend",
          "to": "backend"
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}