{
  "name": "sonification-toolkit",
  "version": "0.1.0",
  "description": "Desktop app with FastAPI backend and React frontend",
  "author": "George Caselton",
  "license": "ISC",
  "main": "main.cjs",
  "scripts": {
    "start": "electron .",
    "build-frontend": "cd ../src/frontend && npm run build",
    "build-backend": "cd ../src/backend && pyinstaller --onefile --name backend main.py",
    "copy-files": "cp -r ../src/frontend/dist build && mkdir -p resources && cp ../src/backend/dist/backend* resources/",
    "dist": "electron-builder"
  },
  "dependencies": {
    "electron-squirrel-startup": "^1.0.1",
    "tree-kill": "^1.2.2",
    "wait-on": "^8.0.4"
  },
  "devDependencies": {
    "electron": "^37.3.1",
    "electron-builder": "^26.0.12"
  },
  "build": {
    "appId": "com.georgecaselton.sonification-toolkit",
    "productName": "Sonification Toolkit",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.cjs",
      "preload.cjs",
      "splash.html",
      "build/**/*"
    ],
    "extraResources": [
      {
        "from": "resources/backend.exe",
        "to": "backend.exe"
      },
      {
        "from": "resources/_internal",
        "to": "_internal"
      }
    ],
    "win": {
      "target": "nsis"
    },
    "mac": {
      "target": "dmg"
    },
    "linux": {
      "target": "AppImage"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
